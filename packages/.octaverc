global OCTAVE_PACKAGE_PREFIX;
if (!strcmp(getenv("USER"), "root"))
  OCTAVE_PACKAGE_PREFIX=[pwd() '/install'];
else
  if (strcmp(OCTAVE_HOME()(end),"/"))
    OCTAVE_PACKAGE_PREFIX = [OCTAVE_HOME "share/octave/packages"];
  else 
    OCTAVE_PACKAGE_PREFIX = [OCTAVE_HOME "/share/octave/packages"];
  endif
endif
