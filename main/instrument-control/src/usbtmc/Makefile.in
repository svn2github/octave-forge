OCT := usbtmc.oct usbtmc_close.oct usbtmc_write.oct usbtmc_read.oct
OBJ := usbtmc_class.o

MKOCTFILE ?= mkoctfile

CFLAGS     = @DEFS@

all: $(OBJ) $(OCT)

%.o: %.cc
	$(MKOCTFILE) $(CFLAGS) -c $^

%.oct: %.o
	$(MKOCTFILE) $^ $(OBJ) -o ../$@

clean:
	rm -f *.oct *.o
	
distclean: clean
	rm Makefile

.PHONY: all clean
