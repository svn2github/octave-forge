OCT := gpib.oct gpib_timeout.oct gpib_write.oct gpib_close.oct gpib_read.oct
OBJ := gpib_class.o

MKOCTFILE  ?= mkoctfile

CFLAGS      = @DEFS@
LFLAGS      = @GPIBLIBS@

all: $(OBJ) $(OCT)

%.o: %.cc
	$(MKOCTFILE) $(CFLAGS) -c $^

%.oct: %.o
	$(MKOCTFILE) $^ $(OBJ) $(LFLAGS) -o ../$@

clean:
	rm -f *.oct *.o

distclean: clean
	rm Makefile

.PHONY: all clean
