use 5.010;                      # Use Perl 5.10
use strict;                     # Enforce some good programming rules
use warnings;                   # Replacement for the -w flag, but lexically scoped
use File::Find;                 # Load functions to traverse a directory tree
use Tie::File;
use Fcntl;
 
my $header_file = shift;
 
tie (my @header, "Tie::File", $header_file) or die "Can't tie to $header_file : $!\n";
 
sub prepend {
  my $path = $File::Find::name;
  return if $_ =~ m/^\.\.?$/;
  return if $File::Find::dir =~ m/\.svn$/;
  if (-f $_){
    tie (my@file, "Tie::File", $_) or (warn "Can't tie to '$path' : $!\n" && return);
    unshift (@file, @header);
  }
}
find(\&prepend, @ARGV);
