## PKG_ADD
## add paths of io pkg java jars. First check if Java support was built in
if (octave_config_info ("features").JAVA)
  ##
  if (ispc)
    # (MinGW) assume jar files are in /lib/java and let chk_spreadsheet_support sort it out
    libdir = octave_config_info ("libdir");
    userdir = getenv ("USERPROFILE");
  else
    ## On linux spreadsheet .jars are often found isomewhere n /usr/share/java
    libdir = "/usr/share";
    userdir = "~";
  endif
  ## Allow time for package to be fully loaded
  pause (0.25);
  ## First process user directory (may contain user-specifiv .jar versions)
  spr_status = chk_spreadsheet_support ([ userdir filesep "java" ]);
  ## Only then search for system-supplied jars
  spr_status = chk_spreadsheet_support ([ libdir filesep "java" ]);
  ## Also try user's home directory
endif
## Clean up
clear libdir spr_status ;